  <!-- body -->
<h1><strong><%= @cocktail.name %></strong></h1>
<div class="container">
  <br>


<div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Recipe</h3>
      <table class="table table-bordered shadow-lg">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>


  <%=  link_to "create new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-success" %>
  <br>
  <br>
  <%=  link_to "cocktails", cocktails_path, class: "btn btn-secondary" %>
